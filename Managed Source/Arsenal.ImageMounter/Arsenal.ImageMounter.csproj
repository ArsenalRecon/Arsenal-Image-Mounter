<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Arsenal Image Mounter .NET API Library</Description>
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
    <LangVersion>preview</LangVersion>
    <PackageId>ArsenalRecon.ImageMounter</PackageId>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="LTRData.DiscUtils.Core" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Dmg" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Fat" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Ntfs" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.OpticalDisk" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Streams" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Vdi" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Vhd" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Vhdx" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Vmdk" Version="1.0.70" />
    <PackageReference Include="LTRData.DiscUtils.Xva" Version="1.0.70" />
    <PackageReference Include="LTRData.Extensions" Version="*" />
    <PackageReference Include="LTRData.Extensions.Native" Version="*" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'net48'">
    <PackageReference Include="System.Collections.Immutable" Version="*" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="*" />
    <Reference Include="System.ServiceProcess" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Microsoft.Win32.Registry" Version="*" />
    <PackageReference Include="System.IO.FileSystem.AccessControl" Version="*" />
    <PackageReference Include="System.Collections.Immutable" Version="9.*" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="8.*" />
    <PackageReference Include="Microsoft.Bcl.HashCode" Version="*" />
  </ItemGroup>

</Project>