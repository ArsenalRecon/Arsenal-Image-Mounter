<Project>

  <PropertyGroup>

    <TargetFrameworks>net48;net6.0;net7.0</TargetFrameworks>
    <RootNamespace>Arsenal.ImageMounter</RootNamespace>
    <OutputPath Condition="'$(MSBuildProjectExtension)' != '.shfbproj'">..\bin\$(Configuration)\</OutputPath>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DisableWinExeOutputInference>true</DisableWinExeOutputInference>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <LangVersion>Latest</LangVersion>
    <Prefer32Bit>false</Prefer32Bit>
    <OptionInfer>On</OptionInfer>
    <OptionStrict>On</OptionStrict>
    <OptionExplicit>On</OptionExplicit>
    <DebugType>portable</DebugType>
    <Deterministic>false</Deterministic>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <NeutralLanguage>en</NeutralLanguage>

    <Title>Arsenal Image Mounter</Title>
    <Company>Arsenal Recon</Company>
    <Product>Arsenal Image Mounter</Product>
    <Copyright>Copyright Â© Arsenal Recon, 2015 - 2023</Copyright>
    <Trademark />
    <FileVersion>3.9.254.0</FileVersion>
    <ProductVersion>3.9.254.0</ProductVersion>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <Authors>Arsenal Recon</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <Company>Arsenal Recon</Company>
    <PackageVersion>$(FileVersion)</PackageVersion>
    <PackageOutputPath>$(LocalNuGetPath)</PackageOutputPath>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

  </PropertyGroup>

  <PropertyGroup>

    <DelaySign>false</DelaySign>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Arsenal.ImageMounter.snk</AssemblyOriginatorKeyFile>

  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
